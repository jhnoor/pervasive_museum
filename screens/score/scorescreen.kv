#: import config config

<ScoreScreen>
    canvas.before:
        Color:
            rgba: config.colors['player1_bg']
        Rectangle:
            pos: self.pos
            size: self.size

    Button:
        text: "Tilbake"
        font_size: '%s sp' % (self.width*.09)
        size_hint: (0.2, 0.1)
        pos_hint: {"bottom": 1, "center_x": 0.5}
        on_press: root.back()

<PlayersScoreGridLayout>
    cols: 2
    spacing: (30, 30)
    padding: (120, 120)

<PlayerScoreFloatLayout>:
    pos_hint: {'top': 1}
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.answer_feedback
        font_size: '%s sp' % (self.width*.8)
        color: root.answer_color
        size_hint: (None, None)
        pos_hint: {"center_x": 0.5, "top": 1}


    ProgressBar:
        max: 100
        size_hint: (0.8, None)
        pos_hint: {"center_x": 0.5, "top": 0.7}
        value: root.progress

        canvas:
            Color:
                rgb: 1, 1, 1
            BorderImage:
                border: (12, 12, 12, 12)
                pos: self.x, self.center_y - config.xp_progressbar_height/2
                size: self.width, config.xp_progressbar_height
                source: 'images/progressbar_bg.PNG'
            BorderImage:
                border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
                pos: self.x, self.center_y - config.xp_progressbar_height/2
                size: self.width * (self.value / float(self.max)) if self.max else 0, config.xp_progressbar_height
                source: 'images/xp_progressbar_foreground.png'

    Label:
        text: "lvl "+root.level
        font_size: '%s sp' % (self.width*.2)
        color: root.answer_color
        size_hint: (None, None)
        pos_hint: {"center_x": 0.5, "top": 0.8}

    Label:


    AsyncImage:
        source: root.icon_url
        size_hint: (1, 1)
        pos_hint: {"center_x": 0.5, "top": 0.5}
