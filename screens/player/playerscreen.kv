<PlayerScreen>
    GridLayout:
        cols: 2

        # Player 1 box - show users profile
        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                id: player_1_username_label
                font_size: '%s sp' % (self.width*.05)
                text: "[b][color=cbf3f0]Player1[/color][/b]"
                markup: True

            BoxLayout:
                orientation: 'horizontal'
                padding: 30
                spacing: 30

                Label:
                    text: "here comes icon"
                    font_size: '%s sp' % (self.width*.1)


                Label:
                    text: "ready btn"
                    font_size: '%s sp' % (self.width*.1)

                Label:
                    text: "cancel btn"
                    font_size: '%s sp' % (self.width*.1)

            BoxLayout:
                padding: 30
                spacing: 30

                # XP bar
                ProgressBar:
                    max: 1000
                    value: 250

            BoxLayout:
                padding: 10
                spacing: 10

                Label:
                    text: "Power-ups"

            BoxLayout:
                padding: 10
                spacing: 10

                Label:
                    text: "Trof√©er"


        # Player 2 box - default not logged in
        BoxLayout:
            id: player_2_box_id
            orientation: 'vertical'
            # background
            canvas.before:
                Color:
                    rgba: (0.18, 0.77, 0.71, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'vertical'

                Label:
                    font_size: '%s sp' % (self.width*.1)
                    text: "[b][color=cbf3f0]Pe[/color]Muse[/b]"
                    markup: True
                    size_hint_y: 4

                BoxLayout:
                    orientation: 'vertical'
                    padding: 30
                    spacing: 30
                    size_hint_y: 3

                    Image:
                        id: rfid_image_id
                        source: 'images/rfid_login.png'
                        halign: 'center'
                        size_hint_y: 4

                    Label:
                        text: 'Skann rfid brikken din'
                        font_size: '%s sp' % (self.width*.05)
                        #on_press: root.open_menu()
                        background_color: (0.80, 0.95, 0.94, 0.5)