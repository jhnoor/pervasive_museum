<ReadyScreen>
    GridLayout:
        cols: 2

        # Player 1 box - show users profile
        BoxLayout:
            id: player_1_box_id
            orientation: 'vertical'
            padding: 10

            # background
            canvas.before:
                Color:
                    rgba: (0.30, 0.24, 0.24, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: player_1_username_label
                font_size: '%s sp' % (self.width*.05)
                text: "[b][color=cbf3f0]Player[/color]1[/b]"
                markup: True

            BoxLayout:
                orientation: 'horizontal'
                padding: 30
                spacing: 30

                Label:
                    text: "here comes icon"
                    font_size: '%s sp' % (self.width*.1)


                Button:
                    text: "Klar"
                    color: (0,0,0,1)
                    font_size: '%s sp' % (self.width*.1)
                    background_normal: "images/background_normal_white.png"
                    background_color: (0.48, 0.91, 0.78, 1)
                    size_hint_y: 1

                Button:
                    text: "Kanseller"
                    color: (1,1,1,1)
                    font_size: '%s sp' % (self.width*.1)
                    background_normal: "images/background_normal_white.png"
                    background_color: (0.93, 0.04, 0.26, 1)
                    size_hint_y: 1

            BoxLayout:
                orientation: 'horizontal'
                padding: 30
                spacing: 30

                # XP bar
                ProgressBar:
                    max: 1000
                    value: 250

            Label:
                font_size: '%s sp' % (self.width*.03)
                text: "Power-ups"

            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                spacing: 10



            Label:
                font_size: '%s sp' % (self.width*.03)
                text: "Troféer"


            BoxLayout:
                padding: 10
                spacing: 10
