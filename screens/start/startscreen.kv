<StartScreen>:
    # background
    canvas.before:
        Color:
            rgba: (0.18, 0.77, 0.71, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'

        Label:
            font_size: '%s sp' % (self.width*.1)
            text: "[b][color=cbf3f0]Pe[/color]Muse[/b]"
            markup: True
            size_hint_y: 4



        BoxLayout:
            orientation: 'vertical'
            padding: 30
            spacing: 30
            size_hint_y: 3

            Image:
                id: rfid_image_id
                source: 'images/rfid_login.png'
                halign: 'center'
                size_hint_y: 4

            Label:
                text: 'Skann rfid brikken din'
                font_size: '%s sp' % (self.width*.05)
                #on_press: root.open_menu()
                background_color: (0.80, 0.95, 0.94, 0.5)

        BoxLayout:
            id: log_id
            orientation: 'vertical'
            padding: 1
            padding: 1
            spacing: 1

